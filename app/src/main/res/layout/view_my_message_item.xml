<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_message_image_account"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvMyMessageStatus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/tvContent"
        android:layout_toLeftOf="@+id/tvContent"
        android:gravity="right|bottom"
        android:text="อ่านแล้ว\n13:13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/colorAccent"
        android:gravity="center|left"
        android:minHeight="@dimen/height_message_image_account"
        android:padding="8dp"
        android:text="@string/test_few_text" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivImageOtherAccount"
        android:layout_width="@dimen/width_message_image_account"
        android:layout_height="@dimen/height_message_image_account"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivImageOtherAccount"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other name" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center|start"
                android:minHeight="@dimen/height_message_image_account"
                android:padding="8dp"
                android:text="@string/test_few_text" />

            <TextView
                android:id="@+id/tvOtherMessageStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvContent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/tvContent"
                android:layout_toRightOf="@+id/tvContent"
                android:gravity="left"
                android:padding="4dp"
                android:text="13:13" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>